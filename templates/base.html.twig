<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="shortcut icon" href="{{ asset('medias/images/logoAnakinCorp.png') }}" type="image/jpg">
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        <a href="{{ path('app_home') }}">
            <img src="{{ asset('medias/images/logoAnakinCorp.png') }}" id="logo"  alt="logo AnakinCorp">
        </a>
        <nav>

            <ul>
                <!-- Si utilisateur connecter et admin -->
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('app_logout') }}">Déconnexion.</a></li>
                    <li><a href="{{ path('admin') }}">Pannel d'administration</a></li>
                {% endif %}

                <li id="nos-equipes"><b>NOS EQUIPES</b>
                    <div id="sub-menu">
                        <a href="{{ path('app_equipe_rocketleague') }}">Rocket League</a>
                        <a href="{{ path('app_equipe_callofduty') }}">Call of Duty</a>
                        <a href="{{ path('app_equipe_apexlegends') }}">Apex Legends</a>
                    </div>
                </li>
                <li><a href="">COMPETITIONS</a></li>
                <li><a href="{{ path('app_partenaire') }}">PARTENAIRES</a></li>
                <li><a href="{{ path('app_actualites') }}">ACTUALITES</a></li>
            </ul>
        </nav>

    </header>
        {% block home %}{% endblock %}
        {% block equipe %}{% endblock %}

        {% block pageActualites %}{% endblock %}
        {% block pagePartenaire %}{% endblock %}

        {% block equipeRocketLeague %}{% endblock %}
        {% block equipeCallOfDuty %}{% endblock %}
        {% block equipeApexLegends %}{% endblock %}

        {% block login %}{% endblock %}
        {% block register %}{% endblock %}
    <script>
        AOS.init();
    </script>
    </body>
</html>
